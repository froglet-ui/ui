{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "packages/froglet-ui/dist/**",
        "apps/storybook/dist/**"
      ]
    },
    "build-storybook": {
      "dependsOn": ["^build-storybook"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["apps/storybook/storybook-static/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
